<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/title_back"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="17dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal">

            <com.example.zf_android.trade.widget.MyTextView
                android:id="@+id/after_sale_maintain"
                style="@style/TextGrid"
                android:drawableTop="@drawable/after_sale_ticket"
                android:text="@string/after_sale_ticket"/>

            <View style="@style/CutLine"/>

            <com.example.zf_android.trade.widget.MyTextView
                android:id="@+id/after_sale_update"
                style="@style/TextGrid"
                android:drawableTop="@drawable/after_sale_update"
                android:text="@string/after_sale_update"/>

            <View style="@style/CutLine"/>

            <com.example.zf_android.trade.widget.MyTextView
                android:id="@+id/after_sale_cancel"
                style="@style/TextGrid"
                android:drawableTop="@drawable/after_sale_cancel"
                android:text="@string/after_sale_cancel"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>