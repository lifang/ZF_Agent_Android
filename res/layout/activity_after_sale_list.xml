<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/F3F2F2">

	<include layout="@layout/title_back"/>
    <LinearLayout android:layout_height="34dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        >

        <Spinner
            android:id="@+id/spinnerstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/eva_nodata"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:background="@color/ffffff"
        android:orientation="horizontal"
        android:visibility="gone" >

        <include layout="@layout/include_norecord" />
    </LinearLayout>

	<com.example.zf_android.trade.widget.XListView
		android:id="@+id/after_sale_list"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingTop="8dp"
		android:background="@color/F3F2F2"
		android:divider="@color/F3F2F2"
		android:dividerHeight="8dp"
		android:scrollbars="none"/>
</LinearLayout>
