<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/F3F2F2">

        <include layout="@layout/title_back" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/Viewc2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingLeft="24dp">


            <RelativeLayout
                android:id="@+id/ll_choose_terminal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/trade_agent_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/mine2"/>

                <TextView
                    style="@style/TextItem.Relative"
                    android:layout_toRightOf="@+id/trade_agent_icon"
                    android:layout_marginLeft="@dimen/d_7dp"
                    android:text="选择终端号"/>

                <TextView
                    android:id="@+id/tv_terminals"
                    style="@style/TextItem.Relative"
                    android:text=""
                    android:maxLength="10"
                    android:layout_toLeftOf="@+id/trade_start_arrow_agent"/>

                <ImageView
                    android:id="@+id/trade_start_arrow_agent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/d_12dp"
                    android:layout_marginRight="@dimen/d_12dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/post_right"/>

            </RelativeLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Viewc2"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:background="@color/Viewc2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingLeft="24dp">


            <RelativeLayout
                android:id="@+id/ll_choose_agent"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/icon_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/mine2"/>

                <TextView
                    style="@style/TextItem.Relative"
                    android:layout_toRightOf="@+id/icon_destination"
                    android:layout_marginLeft="@dimen/d_7dp"
                    android:text="配送至"/>

                <TextView
                    android:id="@+id/trade_agent_name"
                    style="@style/TextItem.Relative"
                    android:text=""
                    android:layout_toLeftOf="@+id/arrow_destination"/>

                <ImageView
                    android:id="@+id/arrow_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/d_12dp"
                    android:layout_marginRight="@dimen/d_12dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/post_right"/>

            </RelativeLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Viewc2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_10dp"
            android:layout_marginBottom="@dimen/d_10dp"
            android:paddingLeft="@dimen/d_12dp"
            android:paddingRight="@dimen/d_12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="提交"
                android:textColor="@color/white"
                android:enabled="false"
                android:background="@drawable/normal_button_selector"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
