<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/title_back"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="修改手机号将向您的原手机发送验证码"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/Viewc2" />

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_item" >



        <LinearLayout android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_marginLeft="44dp"
            android:gravity="center_vertical"
            android:layout_weight="1">


            <TextView
                android:id="@+id/tv_old_phone"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text292929"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="17sp" />
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/btn_get_verify_code"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_blue_shapepre"
                android:textColor="@color/white"
                android:text="获取验证码" />


        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/Viewc2" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/Viewc2" />

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_item" >

        <LinearLayout android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_marginLeft="44dp"
            android:gravity="center_vertical"
            android:layout_weight="1">


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_verify_code"
                android:singleLine="true"
                android:text=""
                android:hint="输入验证码"
                android:textColor="@color/text292929"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="17sp" />


        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/Viewc2" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/Viewc2" />

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_item" >

        <LinearLayout android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_marginLeft="44dp"
            android:gravity="center_vertical"
            android:layout_weight="1">


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_new_phone"
                android:singleLine="true"
                android:text=""
                android:hint="新手机号"
                android:textColor="@color/text292929"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="17sp" />


        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/Viewc2" />


    <LinearLayout
        android:id="@+id/sumary"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_blue_shape"
            android:textColor="@color/white"
            android:text="提交" />
    </LinearLayout>





</LinearLayout>



