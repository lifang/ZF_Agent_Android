<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/F3F2F2"
    >

    <include layout="@layout/title_back" />

    <LinearLayout
        android:id="@+id/ll_choose_users"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <View
            android:background="@color/Viewc2"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_height="0.5dp"/>
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_users"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="选择用户（选填）"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:src="@drawable/post_right" />
        </LinearLayout>
        <View
            android:background="@color/Viewc2"
            android:layout_width="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="0.5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="96dp"
        android:id="@+id/ll_choose"
        android:background="#000000" >


        <LinearLayout android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sjr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="收件人: 张小小"
                    android:textColor="@color/ffffff"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="13900010002"
                    android:textColor="@color/ffffff"
                    android:textSize="13sp" />



            </LinearLayout>


            <TextView
                android:id="@+id/tv_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:gravity="center_vertical"
                android:layout_marginTop="14dp"
                android:singleLine="true"
                android:text="收件地址: 上海市XXX路YY号11#101"
                android:textColor="@color/ffffff"
                android:textSize="13sp" />


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/right_gg" />
    </LinearLayout>
    <View android:background="@color/F3F2F2"
        android:layout_width="fill_parent"
        android:layout_height="5dp"/>

    <ScrollView  android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="@color/ffffff"
        android:layout_weight="1">
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="5dp"
                    android:background="@color/ffffff" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="86dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_face"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:layout_marginLeft="14dp"
                        />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="14dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/title2"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:text="泰山TS900"
                                android:textColor="@color/text292929"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:layout_marginBottom="3dp"
                                android:layout_marginTop="3dp"
                                android:background="@color/ffffff" />

                            <TextView
                                android:id="@+id/tv_origin_price"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="14dp"
                                android:layout_marginRight="@dimen/margin_right"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:text=""
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/ffffff" />

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3" >

                            <TextView
                                android:id="@+id/retail_price"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="7dp"
                                android:ellipsize="end"
                                android:gravity="right"
                                android:maxLines="1"
                                android:text="$ 1999"
                                android:textColor="@color/price"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/showCountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@id/retail_price"
                                android:layout_marginRight="7dp"
                                android:ellipsize="end"
                                android:text="X   1"
                                android:gravity="right"
                                android:maxLines="1"
                                android:textColor="@color/text292929"
                                android:textSize="11sp" />

                            <ImageView
                                android:id="@+id/delete"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="7dp"
                                android:background="@drawable/sc_delete"
                                android:visibility="invisible" />

                            <LinearLayout
                                android:id="@+id/zftd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:gravity="bottom"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/wayName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="bottom"
                                    android:maxLines="1"
                                    android:text="支付通道"
                                    android:textColor="@color/text6c6c6c6"
                                    android:textSize="11sp" />

                                <TextView
                                    android:id="@+id/tv_channel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:ellipsize="end"
                                    android:gravity="bottom"
                                    android:maxLines="1"
                                    android:text="支付宝"
                                    android:textColor="@color/text292929"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/zf_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@id/zftd"
                                android:gravity="bottom"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/Model_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="bottom"
                                    android:maxLines="1"
                                    android:text="品牌型号"
                                    android:textColor="@color/text6c6c6c6"
                                    android:textSize="11sp" />

                                <TextView
                                    android:id="@+id/tv_model"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:ellipsize="end"
                                    android:gravity="bottom"
                                    android:maxLines="1"
                                    android:text="泰山TS9000"
                                    android:textColor="@color/text292929"
                                    android:textSize="11sp" />
                            </LinearLayout>


                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/Viewc2" />

                <RelativeLayout android:layout_height="48dp"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_quantity_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="23dp"
                        android:layout_centerVertical="true"
                        android:maxLines="1"
                        android:text="购买数量"
                        android:textColor="@color/text292929"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/ll_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginRight="7dp"
                        android:background="@drawable/sc_edit"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:focusable="true">
                        <ImageView
                            android:id="@+id/reduce"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:background="@drawable/jian" />

                        <EditText
                            android:id="@+id/buyCountEdit"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:numeric="integer"
                            android:background="@color/ffffff"
                            android:gravity="center"
                            android:inputType="none"
                            android:editable="false"
                            android:textSize="12sp"
                            android:text="1" />
                        <ImageView
                            android:id="@+id/add"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:background="@drawable/jia" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/Viewc2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_zulin_extra"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="@color/white"

                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left2"
                        android:text="押金"
                        android:textSize="13sp"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/tv_zulin_yajin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="7dp"
                        android:text="￥29999"
                        android:textColor="@color/price"
                        android:textSize="13sp" />
                </LinearLayout>
                <View android:layout_height="1dp"
                    android:layout_width="fill_parent"
                    android:background="@color/Viewc2"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="@color/white"

                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left2"
                        android:text="最长租赁时间："
                        android:textSize="10sp"
                        />
                    <TextView
                        android:id="@+id/tv_max_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left2"
                        android:text="13个月"
                        android:textSize="10sp"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/tv_zulin_heji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="7dp"
                        android:text="合计：￥29999"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="@color/white"

                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left2"
                        android:text="最短租赁时间："
                        android:textSize="10sp"
                        />
                    <TextView
                        android:id="@+id/tv_min_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left2"
                        android:text="2个月"
                        android:textSize="10sp"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@color/white"

                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left2"
                    android:text="共计:   1件"
                    android:textColor="@color/text6c6c6c6"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="配送费：￥0"
                    android:textColor="@color/text6c6c6c6"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_real_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="7dp"
                    android:text="实付：29999"
                    android:textColor="@color/text6c6c6c6"
                    android:textSize="13sp" />
            </LinearLayout>

            <EditText android:layout_width="fill_parent"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="7dp"
                android:layout_height="wrap_content"
                android:hint="留言"
                android:textSize="12dp"
                android:padding="5dp"
                android:id="@+id/comment_et"
                android:background="@drawable/bg_gray_shape"
                />
            <View android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                android:background="@color/Viewc2"/>
            <LinearLayout
                android:id="@+id/ll_zulin_xieyi"
                android:layout_height="42dp"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:background="@color/F3F2F2"
                android:visibility="gone"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/cb_zulin"
                    android:button="@drawable/checkbox_selector"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:checked="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="我同意"
                    android:textColor="@color/text6c6c6c6"
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/tv_zulin_xieyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="《租赁协议》"
                    android:textColor="@color/bgtitle"
                    android:textSize="11sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fapiao"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_height="42dp"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:background="@color/F3F2F2"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/item_cb"
                        android:button="@drawable/checkbox_selector"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:checked="false" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"

                        android:text="我要发票"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="11sp" />


                </LinearLayout>



                <View
                    android:id="@+id/ll_fapiao_info_line"
                    android:layout_height="1px"
                    android:layout_width="fill_parent"
                    android:background="@color/Viewc2"/>

                <LinearLayout
                    android:id="@+id/ll_fapiao_info"
                    android:layout_height="50dp"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    >

                    <Spinner
                        android:id="@+id/spinnerstate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp" />
                    <EditText android:layout_width="fill_parent"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_height="wrap_content"
                        android:hint="请输入发票抬头"
                        android:id="@+id/et_titel"
                        android:background="@drawable/edit_login"/>

                </LinearLayout>

            </LinearLayout>

            <View android:layout_height="1dp"
                android:layout_width="fill_parent"

                android:background="@color/Viewc2"/>
            <View android:layout_height="10dp"
                android:layout_width="fill_parent"

                android:background="@color/F3F2F2"/>
        </LinearLayout>
    </ScrollView>


    <LinearLayout  android:layout_height="74dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:background="#E1E0E0"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="right"

            >
            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"

                android:text="实付：￥29999"
                android:textColor="@color/text292929"
                android:textSize="17sp" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"

                android:text="（ 含配送费：￥0）"
                android:textColor="@color/text292929"
                android:textSize="8sp" />


        </LinearLayout>
        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_pay"

            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/bg_blue_shape"
            android:textColor="@color/ffffff"
            android:text="确认" />

    </LinearLayout>


</LinearLayout>
