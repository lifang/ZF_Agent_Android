<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/title_back"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/Viewc2" />
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_item" >

        <LinearLayout
            android:id="@+id/ll_choose_users"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:layout_weight="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:singleLine="true"
                android:text="选择用户"
                android:textColor="@color/text292929"
                android:textSize="17sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/tv_username"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text292929"
                android:textSize="17sp" />


        </LinearLayout>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/post_right" />
    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/Viewc2" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/Viewc2" />


    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_item" >

        <LinearLayout android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:layout_weight="1">


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_terminals"
                android:singleLine="true"
                android:text=""
                android:hint="填写终端号"
                android:textColor="@color/text292929"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="17sp" />


        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/Viewc2" />


    <LinearLayout
        android:id="@+id/sumary"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_bind_terminal"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_blue_shape"
            android:textColor="@color/white"
            android:text="绑定" />
    </LinearLayout>





</LinearLayout>



