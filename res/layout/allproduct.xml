<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/F3F2F2"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/titleback_height"
        android:background="@color/bgtitle"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/titleback_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="全部商品"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_pigou"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:visibility="gone"
            android:orientation="vertical" >

            <Button
                android:background="@drawable/pifa_button"
                android:id="@+id/btn_pigou"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="去批购"
                style="@style/big_button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_daigou"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical" >

            <Button
                android:background="@drawable/daigou_button"
                android:id="@+id/btn_daigou"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="去采购"
                style="@style/big_button" />

        </LinearLayout>

    </LinearLayout>


    <include layout="@layout/include_bottom_tab" />

</LinearLayout>