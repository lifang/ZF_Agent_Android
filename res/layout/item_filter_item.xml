<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/F3F2F2"
    >


    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/Viewc2"
        />
    <LinearLayout
        android:id="@+id/ll_bg_line"
        android:tag="@string/tag_destination_get"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:background="@drawable/bg_item" >

        <View
            android:id="@+id/v_left_padding"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <CheckBox
            android:id="@+id/cb_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_selector"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="选择POS品牌"
            android:textColor="@color/text292929"
            android:textSize="17sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_brands"
            android:tag="@string/tag_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text6c6c6c6"
            android:textSize="13sp" />
    </LinearLayout>



</LinearLayout>