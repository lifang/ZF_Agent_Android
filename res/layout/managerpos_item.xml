<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
     android:orientation="vertical"
       android:background="@drawable/bg_item" >
 <View  android:background="@color/F3F2F2"
     android:layout_height="5dp"
     android:layout_width="fill_parent"/>
 <View  android:background="@color/Viewc2"
     android:layout_height="0.5dp"
     android:layout_width="fill_parent"/>
 	<LinearLayout android:layout_height="22dp"
 	    android:layout_width="fill_parent"
 	    android:gravity="center_vertical"
 	    android:orientation="horizontal">
 	    
 	    <TextView android:layout_width="0dp"
 	        android:layout_weight="1"
 	        android:layout_height="wrap_content"
 	        android:gravity="center_vertical"
 	        android:textColor="@color/text6c6c6c6"
 	        android:layout_marginLeft="7dp"
 	        android:textSize="8dp"
 	        android:text="终端编号:20150000111100001"/>
 	   
 	    
 	     	    <TextView android:layout_width="0dp"
 	        android:layout_weight="1"
 	        android:layout_height="wrap_content"
 	        android:gravity="center_vertical"
 	        android:textColor="@color/text6c6c6c6"
 	      
 	        android:textSize="8dp"
 	        android:text="2015-1-1 12:00:00"/>
 	    
 	    
 	</LinearLayout>    
  <View  android:background="@color/Viewc2"
     android:layout_height="0.5dp"
     android:layout_marginLeft="7dp"
     android:layout_marginRight="7dp"
     android:layout_width="fill_parent"/>
 <LinearLayout android:layout_height="48dp"
 	    android:layout_width="fill_parent"
 	    android:gravity="center_vertical"
 	    android:orientation="horizontal">
 	    
 	    <LinearLayout android:layout_width="0dp"
 	        android:layout_weight="1"
 	        android:layout_height="fill_parent"
 	        android:gravity="center_vertical"
 	        android:orientation="vertical"
 	        android:layout_marginLeft="7dp"
 	        >
 	        
 	            <TextView 
 	                android:layout_width="fill_parent"
 	        android:layout_weight="1"
 	        android:layout_height="0dp"
 	        android:gravity="center_vertical"
 	        android:textColor="@color/text292929"
 	      	
 	        android:textSize="11sp"
 	        android:text="终端号"/>
 	                <TextView 	                android:layout_width="fill_parent"
 	        android:layout_weight="1"
 	        android:layout_height="0dp"
 	        android:gravity="center_vertical"
 	        android:textColor="@color/text6c6c6c6"
 	      
 	        android:textSize="13sp"
 	        android:text="0000100020003"/>
 	        
 	   </LinearLayout>
 	    
 	     	 <LinearLayout android:layout_width="0dp"
 	        android:layout_weight="1"
 	        android:layout_height="fill_parent"
 	        android:gravity="center_vertical"
 	        android:orientation="vertical"
 	        android:layout_marginLeft="7dp"
 	        >
 	        
 	            <TextView 
 	                android:layout_width="fill_parent"
 	        android:layout_weight="1"
 	        android:layout_height="0dp"
 	        android:gravity="center_vertical"
 	        android:textColor="@color/text292929"
 	      	
 	        android:textSize="11sp"
 	        android:text="状态"/>
 	                <TextView 	                android:layout_width="fill_parent"
 	        android:layout_weight="1"
 	        android:layout_height="0dp"
 	        android:gravity="center_vertical"
 	        android:textColor="@color/text6c6c6c6"
 	      
 	        android:textSize="13sp"
 	        android:text="未付款"/>
 	        
 	   </LinearLayout>
 	    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/post_right" />
 	    
 	</LinearLayout>
 <View  android:background="@color/Viewc2"
     android:layout_height="0.5dp"
     android:layout_marginLeft="7dp"
     android:layout_marginRight="7dp"
     android:layout_width="fill_parent"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:visibility="gone"
        android:layout_marginTop="11dp"
        android:orientation="horizontal" >

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/buttong_light"
            android:textColor="@color/bgtitle"
            
            android:text="取消订单" />

        <Button
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:background="@color/ffffff"
              />

        <Button
            android:layout_width="140dp"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_blue_shape"
            android:text="评价"
            android:visibility="gone"
            android:textColor="@color/ffffff" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_blue_shape"
            android:textColor="@color/ffffff"
            android:text="付款" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
       
        android:background="@color/Viewc2" />
</LinearLayout>