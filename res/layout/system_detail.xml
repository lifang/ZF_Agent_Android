<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  	android:orientation="vertical"
  	android:background="@color/F3F2F2"
  	 >

 <include layout="@layout/title_back" />
	 <TextView android:id="@+id/msg_title"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="17dp"
	    android:maxLines="2"
	    android:ellipsize="end"
	    android:layout_marginLeft="@dimen/margin_left2"
	    android:layout_marginRight="@dimen/margin_left2"
	   	android:textColor="@color/text6c6c6c6"
	   	android:textSize="17sp"
	    android:text="中国最好的POS机器经销商中 ,POS机器立刻购买获取20000积分"/>
	<TextView android:id="@+id/msg_time"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="10dp"
	 
	    android:ellipsize="end"
	    android:layout_marginLeft="@dimen/margin_left2"
	    android:layout_marginRight="@dimen/margin_left2"
	   	android:textColor="@color/text6c6c6c6"
	   	android:textSize="10sp"
	    android:text="2015-1-1 12:00:00"/>
	<View  android:layout_marginLeft="@dimen/margin_left2"
	    android:layout_marginRight="@dimen/margin_left2"
	    android:layout_height="0.5dp"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="5dp"
	    android:background="@color/bgtitle"/>
	<TextView android:id="@+id/msg_conten"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="10dp"
	 	android:lineSpacingExtra="6dp"
	    android:ellipsize="end"
	    android:layout_marginLeft="@dimen/margin_left2"
	    android:layout_marginRight="@dimen/margin_left2"
	   	android:textColor="@color/text6c6c6c6"
	   	android:textSize="13sp"
	    android:text="中国最好的POS机器经销商中 ,POS机器立刻购买获取20000积分"/>
</LinearLayout>
